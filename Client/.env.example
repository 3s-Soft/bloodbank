# API Configuration
VITE_API_URL=http://localhost:3000/api
VITE_API_TIMEOUT=10000

# Firebase Configuration
# Get these from your Firebase project settings
VITE_FIREBASE_API_KEY=your_firebase_api_key_here
VITE_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your-project-id
VITE_FIREBASE_STORAGE_BUCKET=your-project.appspot.com
VITE_FIREBASE_MESSAGING_SENDER_ID=123456789012
VITE_FIREBASE_APP_ID=1:123456789012:web:abcdef1234567890

# Application Configuration
VITE_APP_NAME=Blood Bank Management System
VITE_APP_VERSION=1.0.0
VITE_APP_DESCRIPTION=Rural blood donation management platform

# Feature Flags
VITE_ENABLE_NOTIFICATIONS=true
VITE_ENABLE_GEOLOCATION=true
VITE_ENABLE_OFFLINE_MODE=false
VITE_ENABLE_ANALYTICS=true

# UI Configuration
VITE_DEFAULT_THEME=light
VITE_ENABLE_THEME_TOGGLE=true
VITE_ITEMS_PER_PAGE=12

# Map Configuration (for location features)
VITE_GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here
VITE_DEFAULT_MAP_CENTER_LAT=22.3569
VITE_DEFAULT_MAP_CENTER_LNG=91.7832

# Contact Information
VITE_SUPPORT_EMAIL=support@bloodbank.org
VITE_SUPPORT_PHONE=+880-1234-567890
VITE_EMERGENCY_CONTACT=+880-911-000000

# Social Media Links
VITE_FACEBOOK_URL=https://facebook.com/bloodbank
VITE_TWITTER_URL=https://twitter.com/bloodbank
VITE_LINKEDIN_URL=https://linkedin.com/company/bloodbank
VITE_INSTAGRAM_URL=https://instagram.com/bloodbank

# Development Configuration
VITE_DEBUG_MODE=true
VITE_MOCK_API=false
